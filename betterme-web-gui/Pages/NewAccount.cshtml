@page
@model MyApp.Namespace.NewAccountModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Crear cuenta";
}

<div class="container text-center mt-5">
    <img src="/Images/BetterMe-logo.png" alt="BetterMe logo" class="mb-4" style="max-height: 70px;">
    <h2 class="mb-4">Crear cuenta</h2>

    <form id="createAccountForm" class="needs-validation" novalidate>
        <div class="row gx-5">
            <!-- Left column -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="txtUsername" class="form-label">Nombre de usuario</label>
                    <input id="txtUsername" name="Username" class="form-control" placeholder="pepito123" required />
                    <div class="invalid-feedback">
                        Por favor ingresa tu nombre de usuario.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="txtFullName" class="form-label">Nombre completo</label>
                    <input id="txtFullName" name="FullName" class="form-control" placeholder="Ej. John Doe Doe" required />
                    <div class="invalid-feedback">
                        Por favor ingresa tu nombre completo.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="txtEmail" class="form-label">Correo</label>
                    <input id="txtEmail" name="Email" type="email" class="form-control" placeholder="ejemplo@dominio.com" required />
                    <div class="invalid-feedback">
                        Por favor ingresa un correo válido.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="dtpBirthDate" class="form-label">Fecha de nacimiento</label>
                    <input id="dtpBirthDate" name="BirthDate" type="date" class="form-control" required />
                    <div class="invalid-feedback">
                        Por favor selecciona tu fecha de nacimiento.
                    </div>
                </div>
            </div>

            <!-- Right column -->
            <div class="col-md-6">
                <div class="mb-3">
                <label for="pwdPassword" class="form-label">Contraseña</label>
                <input id="pwdPassword"
                        name="Password"
                        type="password"
                        class="form-control"
                        required
                        minlength="8" 
                        placeholder="Al menos 8 caracteres, 1 mayúscula y 1 caracter especial" />
                <div class="invalid-feedback">
                    La contraseña debe tener al menos 8 caracteres, una mayúscula y un carácter especial.
                </div>
                </div>
                <div class="mb-3">
                <label for="pwdRepeat" class="form-label">Repetir contraseña</label>
                <input id="pwdRepeat"
                        name="RepeatPassword"
                        type="password"
                        class="form-control"
                        required />
                <div class="invalid-feedback">
                    Las contraseñas deben coincidir.
                </div>
                </div>
            </div>
            </div>

        <div class="row justify-content-center mt-4">
            <div class="col-auto">
                <button type="submit" class="btn btn-dark px-4">Crear cuenta</button>
            </div>
        </div>
        <div class="row justify-content-center mt-2">
            <div class="col-auto">
                <a asp-page="/Login" class="text-primary">Ya tengo una cuenta</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/createAccount.js"></script>
}