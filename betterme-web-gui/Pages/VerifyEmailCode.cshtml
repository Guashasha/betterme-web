@page
@model MyApp.Namespace.VerifyEmailCodeModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Cambiar email";
}

<div class="row vh-100 betterme-bg">
  <div class="col-1 col-md-4"></div>
  <div class="col-10 col-md-4 align-self-center bg-white rounded p-4 shadow-lg">
    
    <!-- Logo -->
    <div class="text-center mb-4">
      <img src="/Images/BetterMe-logo.png" class="img-fluid" alt="BetterMe logo" style="max-height:60px;" />
    </div>
    
    <!-- Title -->
    <h3 class="text-center mb-3">Cambiar email</h3>
    
    <!-- Instructions -->
    <p class="text-center mb-4">
      Ingresa el código que se envió a tu correo 
    </p>
    
    <!-- Verification code input -->
    <div class="mb-4">
      <input id="txtCode"
             type="text"
             class="form-control"
             placeholder="Código de verificación"
             autofocus />
    </div>
    
    <!-- Buttons -->
    <div class="d-flex justify-content-center gap-2">
      <button type="button"
              class="btn btn-dark px-4"
              onclick="confirmCode()">
        Continuar
      </button>
      <button type="button"
              class="btn btn-outline-secondary px-4"
              onclick="window.location.href='/'">
        Cancelar
      </button>
    </div>
    
    <!-- carry the email forward for JS -->
    <input type="hidden" id="hdnEmail" value="@Model.Email" />
    
  </div>
  <div class="col-1 col-md-4"></div>
</div>

@section Scripts {
  <script src="~/js/verifyCode.js"></script>
}