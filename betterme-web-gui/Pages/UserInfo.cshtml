@page
@model MyApp.Namespace.UserInfoModel
@{
    Layout = "_Layout";
    var user = Model.Profile;
}

@if (user is null)
{
    <div class="container py-5">
        <p class="text-danger">No se pudo obtener el usuario.</p>
    </div>
}
else
{
<div class="container py-5">
    <div class="row align-items-center mb-3">
        <div class="col-auto">
            <img src="~/Images/defaultpfp.jpg" class="rounded-circle"
                 style="width:100px;height:100px;" alt="Foto de perfil">
        </div>

        <div class="col">
            <h3 class="fw-bold d-inline">@user.Username</h3>
            <i class="fa-solid fa-circle-check text-success ms-2"></i>
        </div>
    </div>

    <div class="row bg-light rounded p-3">
        <div class="col-md-4">
            <strong>Nombre real</strong><br />
            @user.Name
        </div>
        <div class="col-md-4">
            <strong>Correo</strong><br />
            @user.Email
        </div>
        <div class="col-md-4">
            <strong>Tipo</strong><br />
            @user.Usertype
        </div>
    </div>
</div>
}



